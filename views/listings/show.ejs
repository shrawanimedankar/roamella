<% layout("/layout/boilerplate") %>

  <div class="container mt-3">
    <!-- Title -->
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-8 text-center">
        <h3 class="title-t"> <%= listing.title %></h3>
      </div>
    </div>

    <!-- Listing Card -->
    <div class=" row justify-content-center mt-3 ">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card show-card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top img-fluid show-img" alt="listing image" />

          <div class="card-body">
            <p class="card-text">Hosted by <b>@<%= listing.owner.username %></b>
            </p>
            <p class="card-text">
              <%= listing.description %><br />
                <b>&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</b>
            </p>
            <p class="card-text fs-5">
              <%= listing.location%>, <%= listing.country %>
            </p>
          </div>

          <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex justify-content-between gap-5 mb-3 mt-3">
              <form method="GET" action="/listings/<%= listing._id %>/edit">
                <button class="btne"><i class="fa-solid fa-pencil"></i> Edit</button>
              </form>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btnd"> <i class="fa-solid fa-trash"></i> Delete </button>
              </form>
            </div>
            <% } %>
        </div>
      </div>
    </div>

    <!-- Review Form -->
    <% if (currUser) { %>
      <hr>
      <div class="row justify-content-center mt-4">
        <div class="col-12 col-md-8 col-lg-6">
          <h4 class="review-t">Leave a Review</h4>

          <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>

            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rate</label>
              <fieldset class="starability-grow">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                  aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <div class="mb-3">
              <label class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" class="form-control" rows="4" required></textarea>
              <div class="invalid-feedback"> Please add a comment before submitting. </div>
            </div>
            <button class="submit-btn">Submit</button>
          </form>
        </div>
      </div>
      <% } %>

        <!-- Reviews -->
        <hr />
        <div class="row justify-content-center mt-3">
          <div class="col-12 col-md-10">
            <h5 class="mb-4 text-center">All Reviews</h5>

            <div class="row">
              <% for (review of listing.reviews) { %>
                <div class="col-12 col-md-6 mb-3">
                  <div class="card p-2 h-100">
                    <div class="card-body">
                      <h6>@<%= review.author.username %>
                      </h6>

                      <p class="starability-result" data-rating="<%= review.rating %>"
                        style="transform: scale(0.7); transform-origin: left;"></p>
                      <p>
                        <%= review.comment %>
                      </p>

                      <% if (currUser && currUser._id.equals(review.author._id)) { %>
                        <form method="POST"
                          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btnd">
                            <i class="fa-solid fa-trash"></i> Delete
                          </button>
                        </form>
                        <% } %>
                    </div>
                  </div>
                </div>
                <% } %>
            </div>
          </div>
        </div>

  </div>